# ========================================
# Grant Predictor Environment Variables
# ========================================
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ========================================
# Google OAuth Configuration
# ========================================
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# NextAuth Configuration
# ========================================
# Production URL (update with your actual domain)
NEXTAUTH_URL=https://your-app.vercel.app
# Generate secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl

# ========================================
# Stripe Payment Configuration
# ========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PRICE_ID=price_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ========================================
# Database Configuration
# ========================================
# PostgreSQL connection string (e.g., from Supabase, Neon, or Vercel Postgres)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ========================================
# AI API Keys
# ========================================
# OpenAI API Key (required for document enhancement)
OPENAI_API_KEY=sk-xxx

# Anthropic API Key (optional, for enhanced AI features)
ANTHROPIC_API_KEY=sk-ant-xxx

# ========================================
# Optional: Analytics & Monitoring
# ========================================
# Vercel Analytics (auto-configured on Vercel)
# NEXT_PUBLIC_ANALYTICS_ID=xxx

# ========================================
# Optional: Admin Configuration
# ========================================
# Admin bypass key for rate limiting (development only)
# ADMIN_BYPASS_KEY=your-admin-key

# ========================================
# Optional: Email Configuration (if needed)
# ========================================
# EMAIL_FROM=noreply@your-domain.com
# EMAIL_SERVER_HOST=smtp.gmail.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@gmail.com
# EMAIL_SERVER_PASSWORD=your-app-specific-password

# ========================================
# Development Settings
# ========================================
# NODE_ENV is automatically set by Next.js
# NODE_ENV=development|production|test